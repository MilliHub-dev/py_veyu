# Django Settings
DEBUG=0
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=.veyu.cc,localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# Email Configuration - Brevo (Recommended for Production)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-brevo-login-email@example.com
EMAIL_HOST_PASSWORD=your-brevo-smtp-key
DEFAULT_FROM_EMAIL=noreply@veyu.cc
SERVER_EMAIL=noreply@veyu.cc

# Alternative: Gmail Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-gmail-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Alternative: SendGrid Configuration
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=your-verified-sender@yourdomain.com

# Frontend URL (without trailing slash)
FRONTEND_URL=https://veyu.cc

# Email Settings
USE_CONSOLE_EMAIL=False
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_SSL_VERIFY=True

# For production environments without internet access:
# USE_CONSOLE_EMAIL=True
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_TIMEOUT=15
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=2
EMAIL_FALLBACK_ENABLED=True
EMAIL_FALLBACK_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_RATE_LIMIT=100/day
EMAIL_TRACKING=True

# Cloudinary (for media storage)
CLOUDINARY_URL=cloudinary://your-cloudinary-credentials

# Security (set to 1 in production)
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_BROWSER_XSS_FILTER=1
SECURE_CONTENT_TYPE_NOSNIFF=1
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (Comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://veyu.cc,https://www.veyu.cc

# CSRF Trusted Origins (Comma-separated list)
CSRF_TRUSTED_ORIGINS=https://*.veyu.cc,https://veyu.cc

# Rate Limiting
DJANGO_RATE_LIMIT=100/hour

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-if-using

# API Keys (if any)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags
ENABLE_MAINTENANCE_MODE=False

# Email Verification
EMAIL_VERIFICATION_TIMEOUT=3600  # 1 hour in seconds

# Password Reset
PASSWORD_RESET_TIMEOUT=86400  # 24 hours in seconds
